# Players data uploader pipeline recipes

# Default recipe - show available commands
help:
    @just --list

# Run the data uploader pipeline
run *ARGS:
    @echo "Running players data uploader pipeline..."
    uv run python -m src.main {{ARGS}}

# Run pipeline tests
test:
    @echo "Running players data uploader tests..."
    uv run pytest tests/ -v
    @echo "Players data uploader tests passed"

# Run tests with coverage
test-coverage:
    @echo "Running tests with coverage..."
    uv run pytest tests/ --cov=src --cov-report=term-missing
    @echo "Coverage report complete"

# Lint pipeline code
lint:
    @echo "Linting players data uploader pipeline..."
    uv run ruff check .
    uv run black --check .
    @echo "Players data uploader pipeline linted"

# Format pipeline code
format:
    @echo "Formatting players data uploader pipeline..."
    uv run black .
    uv run ruff check --fix .
    @echo "Players data uploader pipeline formatted"
